<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Circle View-->
    <declare-styleable name="CircleView">
        <attr name="circleVisible" format="boolean" />
        <attr name="circleHasShadow" format="boolean" />
        <attr name="circleColor" format="color"/>
        <attr name="circleRadius" format="dimension"/>
        <attr name="circleDistanceFromEnd" format="dimension"/>
        <attr name="circleDistanceFromTop" format="dimension"/>
    </declare-styleable>

    <!--Double Stripe View-->
    <declare-styleable name="DoubleStripeView">
        <attr name="stripesVisible" format="boolean" />
        <attr name="stripesHaveShadow" format="boolean" />
        <attr name="stripeRightColor" format="color"/>
        <attr name="stripeLeftColor" format="color"/>
        <attr name="stripeRightDistanceFromEnd" format="dimension"/>
        <attr name="stripeLeftDistanceFromRightStripe" format="dimension"/>
        <attr name="stripeRightWidth" format="dimension"/>
        <attr name="stripeLeftWidth" format="dimension"/>
    </declare-styleable>

    <!--Ribbon View-->
    <declare-styleable name="RibbonView">
        <attr name="ribbonVisible" format="boolean" />
        <attr name="ribbonHasShadow" format="boolean" />
        <attr name="ribbonColor" format="color" />
        <attr name="ribbonWidth" format="dimension" />
        <attr name="ribbonHeight" format="dimension" />
        <attr name="ribbonTriangleHeight" format="dimension" />
        <attr name="ribbonDistanceFromEnd" format="dimension" />
    </declare-styleable>

    <!--Stripe View-->
    <declare-styleable name="StripeView">
        <attr name="stripeVisible" format="boolean" />
        <attr name="stripeHasShadow" format="boolean" />
        <attr name="stripeDistanceFromEnd" format="dimension" />
        <attr name="stripeWidth" format="dimension" />
        <attr name="stripeColor" format="color" />
    </declare-styleable>

    <!--Triangle Stripes View-->
    <declare-styleable name="TriangleStripeView">
        <attr name="triangleStripesVisible" format="boolean" />
        <attr name="triangleStripeHasShadow" format="boolean" />
        <attr name="triangleStripeColor" format="color" />
        <attr name="triangleCount" format="integer" />
        <attr name="triangleStripeDistanceFromEnd" format="dimension" />
        <attr name="distanceBetweenStripes" format="dimension" />
        <attr name="triangleStripeThickness" format="dimension" />
    </declare-styleable>

    <!--Triangle View-->
    <declare-styleable name="TriangleView">
        <attr name="triangleVisible" format="boolean" />
        <attr name="triangleHasShadow" format="boolean" />
        <attr name="triangleColor" format="color" />
        <attr name="triangleWidth" format="dimension" />
        <attr name="triangleHeight" format="dimension" />
    </declare-styleable>


</resources>
